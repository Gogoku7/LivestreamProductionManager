@model int

@{
    Layout = null;
}

<div class="row" id="commentator-row-@Model">
    <div class="col-xs-5 form-group">
        <input type="text" class="form-control" name="commentatorViewModels[@Model].Name" id="commentatorViewModels_@{@Model}_Name" data-selector="#commentator@(Model + 1)NameText" />
    </div>
    <div class="col-xs-5 form-group">
        <input type="text" class="form-control" name="commentatorViewModels[@Model].Twitter" id="commentatorViewModels_@{@Model}_Twitter" data-selector="#commentator@(Model + 1)TwitterText" />
    </div>
    <div class="col-xs-2 form-group">
        <button class="btn btn-danger" type="button" onclick="removeCommentator(@Model)" id="deleteCommentator-@Model"><span class="glyphicon glyphicon-remove"></span></button>

        <button class="btn btn-primary" type="button" onclick="moveCommentatorDown(@Model)" id="moveCommentatorDown-@Model"><span class="glyphicon glyphicon-arrow-down"></span></button>

        <button class="btn btn-primary" type="button" onclick="moveCommentatorUp(@Model)" id="moveCommentatorUp-@Model"><span class="glyphicon glyphicon-arrow-up"></span></button>
    </div>
</div>