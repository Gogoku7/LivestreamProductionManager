        <div class="col-xs-3 text-center">
            <label>Name</label>
            <input type="text" class="form-control" name="Team1.Players[0].Name" id="team1Player1Name" data-selector="#team1Player1NameText" data-side="1" data-opposite-id="#team2Player1Name" data-default="-" />
        </div>
        <div class="col-xs-3 text-center">
            <label>Name</label>
            <input type="text" class="form-control" name="Team1.Players[1].Name" id="team1Player2Name" data-selector="#team1Player2NameText" data-side="1" data-opposite-id="#team2Player2Name" data-default="-" />
        </div>
        <div class="col-xs-3 text-center">
            <label>Name</label>
            <input type="text" class="form-control" name="Team2.Players[0].Name" id="team2Player1Name" data-selector="#team2Player1NameText" data-side="2" data-opposite-id="#team1Player1Name" data-default="-" />
        </div>
        <div class="col-xs-3 text-center">
