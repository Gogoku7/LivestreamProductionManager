                    </button>
                </div>
            </div>
        </div>
        <div class="col-xs-3 text-center">
            <div class="row">
                <div class="col-xs-8 text-center">
                    <select class="form-control" name="Team1.Players[1].Character" id="team1Player2Character" data-selector="#team1Player2Character" data-side="1" data-opposite-id="#team2Player2Character" data-default="" data-skin-picker-toggle-selector="button[id='team1Player2CharacterSkinPickerToggle']">
                        <option value="" selected disabled hidden>Choose character</option>
                        @Html.Raw(characterOptionsStringBuilder.ToString())
                    </select>
                </div>
                <div class="col-xs-4 text-left">
                    <button class="btn btn-primary"
                            id="team1Player2CharacterSkinPickerToggle"
                            type="button"
                            data-popover-active="false"
