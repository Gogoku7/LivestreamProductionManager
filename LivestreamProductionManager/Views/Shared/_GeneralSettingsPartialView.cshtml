@model LivestreamProductionManager.ViewModels.Settings.SettingsViewModel

<form action="@Url.Action("UpdateSettings", "Settings")" method="post" id="generalSettingsForm" data-form-type="settingsForm">
    <input type="hidden" name="PathToSettingsFile" value="@Model.PathToSettingsFile" />

    @for (var i = 0; i < Model.Settings.Count; i++)
    {
        <div class="row" id="settingsRow-@i">
            <div class="col-xs-4">
                <label>@Model.Settings[i].SettingKey</label>
            </div>
            <div class="col-xs-8">
                <input type="hidden" name="Settings[@i].SettingKey" value="@Model.Settings[i].SettingKey" />
                <select class="form-control" name="Settings[@i].Value">
                    @for (var j = 0; j < Model.Settings[i].Options.Count; j++)
                    {
                        <option @(Model.Settings[i].Value == Model.Settings[i].Options[j].Value ? "selected" : "") value="@Model.Settings[i].Options[j].Value">@Model.Settings[i].Options[j].Description</option>
                    }
                </select>
            </div>
        </div>
    }
</form>