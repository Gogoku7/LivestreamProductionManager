@model int

@{
    Layout = null;
}

<div class="row">
    <div class="col-md-1 text-center">
        <label>Dead</label>
    </div>
    <div class="col-md-1 text-center">
        <label>Active</label>
    </div>
    <div class="col-md-2 text-center">
        <label>Twitter</label>
    </div>
    <div class="col-md-2 text-center">
        <label>Name</label>
    </div>


    <div class="col-md-2 text-center">
        <label>Name</label>
    </div>
    <div class="col-md-2 text-center">
        <label>Twitter</label>
    </div>
    <div class="col-md-1 text-center">
        <label>Active</label>
    </div>
    <div class="col-md-1 text-center">
        <label>Dead</label>
    </div>
</div>

@for (var i = 0; i < Model; i++)
{
    <div class="row" id="crewPlayer-@i">
        <div class="col-md-1">
            <div class="col-md-4" style="width:auto;"></div>
            <div class="col-md-4">
                <input type="checkbox" class="checkbox-inline big-checkbox" value="true" name="Crew1.Players[@i].Eliminated" id="crew1_player@{@i}__Eliminated" data-id=".crew1Player@(i+1)Eliminated" data-side="1" data-opposite-id="#crew2_player@{@i}__Eliminated" />
            </div>
            <div class="col-md-4" style="width:auto;"></div>
        </div>
        <div class="col-md-1">
            <div class="col-md-4" style="width:auto;"></div>
            <div class="col-md-4">
                <input type="checkbox" class="checkbox-inline big-checkbox" value="true" name="Crew1.Players[@i].Active" id="crew1_player@{@i}__Active" data-id=".crew1Player@(i+1)Active" data-side="1" data-opposite-id="#crew2_player@{@i}__Active" />
            </div>
            <div class="col-md-4" style="width:auto;"></div>
        </div>
        <div class="col-md-2">
            <input type="text" class="form-control" name="Crew1.Players[@i].Twitter" id="crew1_player@{@i}__Twitter" data-id="#crew1Player@(i+1)TwitterText" data-side="1" data-opposite-id="#crew2_player@{@i}__Twitter" />
        </div>
        <div class="col-md-2">
            <input type="text" class="form-control" name="Crew1.Players[@i].Name" id="crew1_player@{@i}__Name" data-id="#crew1Player@(i+1)NameText" data-side="1" data-opposite-id="#crew2_player@{@i}__Name" />
        </div>

        <div class="col-md-2">
            <input type="text" class="form-control" name="Crew2.Players[@i].Name" id="crew2_player@{@i}__Name" data-id="#crew2Player@(i+1)NameText" data-side="2" data-opposite-id="#crew1_player@{@i}__Name" />
        </div>
        <div class="col-md-2">
            <input type="text" class="form-control" name="Crew2.Players[@i].Twitter" id="crew2_player@{@i}__Twitter" data-id="#crew2Player@(i+1)TwitterText" data-side="2" data-opposite-id="#crew1_player@{@i}__Twitter" />
        </div>
        <div class="col-md-1">
            <div class="col-md-4" style="width:auto;"></div>
            <div class="col-md-4">
                <input type="checkbox" class="checkbox-inline big-checkbox" value="true" name="Crew2.Players[@i].Active" id="crew2_player@{@i}__Active" data-id=".crew2Player@(i+1)Active" data-side="2" data-opposite-id="#crew1_player@{@i}__Active" />
            </div>
            <div class="col-md-4" style="width:auto;"></div>
        </div>
        <div class="col-md-1">
            <div class="col-md-4" style="width:auto;"></div>
            <div class="col-md-4">
                <input type="checkbox" class="checkbox-inline big-checkbox" value="true" name="Crew2.Players[@i].Eliminated" id="crew2_player@{@i}__Eliminated" data-id=".crew2Player@(i+1)Eliminated" data-side="2" data-opposite-id="#crew1_player@{@i}__Eliminated" />
            </div>
            <div class="col-md-4" style="width:auto;"></div>
        </div>
    </div>
}